<h2 class="">New book</h2>

<%= form_with model: book, local: true do |f| %>
  <div class="form-group">
    <%= f.label :title, class: "col-md-9" %>
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
  	<%= f.label :opinion, class: "col-md-9" %>
    <%= f.text_area :body %>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary col-md-6" %>
  </div>
<% end %>
